<h1>Your Profile</h1>

<div class="card">
  <div class="card-body">
    <p><strong>Name:</strong> <%= @profile.name %></p>
    <p><strong>Email:</strong> <%= @profile.email %></p>
    <p><strong>Role:</strong> <%= @profile.role.titleize %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit Profile', edit_normal_user_profile_path, class: "btn btn-primary" %>
  <%= link_to 'Back to Dashboard', normal_user_dashboard_path, class: "btn btn-secondary" %>
</div>
