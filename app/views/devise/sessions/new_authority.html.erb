<h2>Login as Authority</h2>

<%= form_with model: @user, url: login_authority_path, local: true do |f| %>
  <%= f.email_field :email, autofocus: true, placeholder: 'Authority Email' %>
  <%= f.password_field :password, placeholder: 'Password' %>

  <div class="actions">
    <%= f.submit 'Login as Authority' %>
  </div>
<% end %>
